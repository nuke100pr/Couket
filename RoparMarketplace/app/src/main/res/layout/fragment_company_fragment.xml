<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context=".drawerFragments.company_fragment">

    <androidx.cardview.widget.CardView
        android:layout_width="328dp"
        android:layout_height="468dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_faded"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="127dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="117dp"
                    android:layout_height="116dp"
                    android:src="@drawable/prakhar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="198dp"
                        android:layout_height="137dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="@string/founder"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/imageView48"
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/priyanshu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView139"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/founder2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="308dp"
                android:layout_height="285dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="@string/special_thanks"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>